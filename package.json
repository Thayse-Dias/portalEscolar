{
  "name": "portal-escolar-qa",
  "version": "1.0.0",
  "description": "Portal Escolar completo com testes QA integrados",
  "main": "index.html",
  "scripts": {
    "start": "serve -l 52222",
    "test:unit": "jest tests/jest/",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:e2e:headed": "cypress run --headed",
    "lint": "eslint js/",
    "format": "prettier --write \"**/*.{js,html,css,json}\"",
    "prepare": "husky install",
    "login:admin": "start-server-and-test start http://localhost:52222 \"cy:run --spec cypress/e2e/login.cy.js --env grep='admin'\"",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "test": "start-server-and-test start http://localhost:52222 cy:run",
    "test:open": "start-server-and-test start http://localhost:52222 cy:open",
    "test:allure": "cypress run --env allure=true",
    "allure:report": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "test:full": "npm run test:allure && npm run allure:report",
    "test:ci": "cypress run --reporter mochawesome",
    "report:merge": "mochawesome-merge cypress/reports/mocha/*.json > cypress/reports/mochareport.json",
    "report:generate": "marge cypress/reports/mochareport.json --reportDir cypress/reports/html --inline"
  },
  "keywords": [
    "qa",
    "testing",
    "cypress",
    "selenium",
    "jest",
    "portal-escolar"
  ],
  "author": "QA Team",
  "license": "MIT",
  "devDependencies": {
    "@shelex/cypress-allure-plugin": "^2.41.2",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^6.1.5",
    "allure-commandline": "^2.34.1",
    "cypress": "^13.6.0",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^12.8.2",
    "lint-staged": "^15.2.0",
    "live-server": "^1.2.2",
    "mochawesome": "^7.1.4",
    "mochawesome-merge": "^5.1.0",
    "mochawesome-report-generator": "^6.3.2",
    "prettier": "^3.1.1",
    "serve": "^14.2.5",
    "start-server-and-test": "^2.1.3",
    "webpack-bundle-analyzer": "^5.0.1"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{html,css,json}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/vendor/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "html",
      "text",
      "lcov"
    ]
  }
}
