{
  "name": "portal-escolar-qa",
  "version": "1.0.0",
  "description": "Portal Escolar completo com testes QA integrados",
  "main": "index.html",
  "scripts": {
    "start": "live-server . --port=3000",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest tests/jest/",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:e2e:headed": "cypress run --headed",
    "test:ci": "npm run test:unit -- --coverage && npm run test:e2e -- --record",
    "lint": "eslint js/",
    "format": "prettier --write \"**/*.{js,html,css,json}\"",
    "prepare": "husky install"
  },
  "keywords": [
    "qa",
    "testing",
    "cypress",
    "selenium",
    "jest",
    "portal-escolar"
  ],
  "author": "QA Team",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^6.1.5",
    "cypress": "^13.6.0",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^12.8.2",
    "lint-staged": "^15.2.0",
    "live-server": "^1.2.2",
    "prettier": "^3.1.1",
    "webpack-bundle-analyzer": "^5.0.1"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{html,css,json}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/vendor/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "html",
      "text",
      "lcov"
    ]
  }
}
